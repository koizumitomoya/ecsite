<%= form_for(@genre, url: admin_genre_path(@genre) ) do |f| %>
	 	<div class="field row">
	 	 <label>ジャンル名</label>
	 	 <%= f.text_field :name, class: "col-xs-12" %>
	 	</div>
	 	<div class="field row">
	 	 <label>有効</label>
	 	<%= f.check_box :effectiveness, {} ,"true", "false"  %>
	 	</div>

	 	<div class="actions row">
	 		<%= f.submit 'update', class: "col-xs-12 btn btn-primary"  %>
	 	</div>
<% end %>       
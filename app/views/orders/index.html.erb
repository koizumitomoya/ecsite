<div class ="col-xs-12">
 <h1>購入履歴</h1>
 <table class="table table-hover tablr-inverse">
	 	    <% current_end_user.orders.each do |order| %>
	     
	 			<tr>
	 				<th>注文日</th>
          <td><%=order.created_at %></td>
        </tr>  
        <tr>
	 				<th>配送先</th>
          <td><%=order.address.address %></td>
        </tr>   
        <tr>
	 				<th>支払金額</th>
          <td><%=order.total %>円</td> 
        </tr>   
        <tr>
	 				<th>注文ステータス</th>
           <td><%=order.status %></td>
	 			</tr>
         <tr>
          <th><%=link_to "注文履歴詳細", order_path(order) %></th>
         </tr>
         <% end %>
         </table>
    
 
 </div>
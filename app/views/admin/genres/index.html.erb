<div class="container">
 <div class="row">
 <h1>管理者　ジャンル　一覧　登録</h1>
  <div class="col-xs-4">
  <%= form_for(@genre, url: admin_genres_path ) do |f| %>
	 	<div class="field row">
	 	 <label>ジャンル名</label>
	 	 <%= f.text_field :name, class: "col-xs-12" %>
	 	</div>
	 	<div class="field row">
	 	 <label>有効</label>
	 	<%= f.check_box :effectiveness, {} ,"true", "false"  %>
	 	</div>

	 	<div class="actions row">
	 		<%= f.submit 'creat', class: "col-xs-12 btn btn-primary"  %>
	 	</div>
<% end %>    
  
 </div>
 <div class="col-xs-8">
 <table class="table">
  <thead>
   <tr>
    <th>ジャンル名     <th>
    <th>有効<th>
	<th>       <th>
   </tr>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>

    <tr>
    <td><%= genre.name %><td>
    <td><%= genre.effectiveness %><td>
	<td><%= link_to "編集", edit_admin_genre_path(genre) %><td>
   </tr>
   <% end %>
  </tbody>
  
 </table>
 </div>
  
 </div>
</div>

   


 

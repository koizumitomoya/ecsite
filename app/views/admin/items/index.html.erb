
 <table class="table table-hover tablr-inverse">
	 		<thead>
	 			<tr>
	 				<th></th>
	 				<th>商品名</th>
	 				<th>商品説明文</th>
	 				<th>ジャンル</th>
                    <th>価格</th>
                    <th>販売ステータス</th>
                    <th></th>
	 			</tr>
	 		</thead>
	 		<tbody>
	 			 <% @items.each do |item| %>
				  <% if item.genre.effectiveness == true %>


	 			<tr>
	 				<td><%= attachment_image_tag item, :image, :fill, 60, 60, format: 'jpeg',  size: "50x50" %></td>
	 				<td> <%= item.name %></td>
	 				<td><%= item.description %></td>
	 				<td> <%= item.genre.name %></td>
                    <td> <%= item.price %></td>
                    <td> <%= item.status %></td>
                    <td><%= link_to  "編集", edit_admin_item_path(item) %></td>
	 			</tr>
				<% end %> 
	 			<% end %> 
	 		</tbody>
	 	</table>
<div>
<table class="table">

 <thead>
  <tr>
   <th>item name</th>
   <th>item name</th>
   <th>price</th>
   <th>genre</th>
   <th>description</th>
   <th>status</th>
  </tr>
 </thead>
 <tbody>
<% @items.each do |item| %>
<% if item.genre.effectiveness == true %>
  <tr>
   <td><%= attachment_image_tag item, :image, :fill, 60, 60, format: 'jpeg',  size: "50x50" %></td>
   <td><%=link_to item.name, item_path(item.id) %></td>
   <td><%= item.price %></td>
    <td><%= item.genre.name %></td>
   <td><%= item.description %></td>
   <td><%= item.status %></td>
  </tr> 
 </tbody>
 <% end %>
 <% end %>
 
</table>
 </div>
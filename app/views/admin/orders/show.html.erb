<table class="table">
<thead>
    <tr>
     　<th>購入者</th>
    <th>購入日</th>
      <th>配送先住所</th>
	  <th>配送先名前</th>		
      <th>小計</th>
      <th>配送ステータス</th>
	  <th colspan="3"></th>
    <tr>
   
  </thead>
  <tbody>
   
    <tr>
    <td><%= @order.end_user.surname%><%= @order.end_user.name%></td>
     <td><%= @order.created_at%></td>
      <td><%= @order.address.address%></td>
	  <td><%= @order.address.name%></td>		
      <td><%= @order.total %> </td>
      <%= form_for(@order, url: admin_order_path(@order)) do |f| %>

	  <td colspan="3"><%= f.select :status, Order.statuses.keys, :selected=>@order.status%></td>
      <td><%= f.submit '配送ステータス変更', class: "col-xs-12 btn btn-primary"  %></td>
    <tr>
     <%end%>   
   


  </tbody>
  
</table>
<table class="table">
  <thead>
    <tr>
      <th>商品名前</th>
	  <th>価格</th>		
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
	  <th colspan="3"></th>
    <tr>
   
  </thead>
  <tbody>
  <% @order_details.each do |order| %>

    <tr>
      <td><%= order.item.name %></td>
	  <td><%= order.item.price%></td>		
      <td><%=order.amount %></td>
	  <td colspan="3"><%= order.price%></td>
        <%= form_for(order,url: admin_order_detail_path(order)) do |f| %>


      <td><%= f.select :status, OrderDetail.statuses.keys, :selected=>order.status %></td>
      <td>	<%= f.submit '製作ステータス変更', class: "col-xs-12 btn btn-primary"  %></td>
    <tr>
    <%end%>    
   


  </tbody>
  <% end %>
</table>



 
        

	 	
	
      


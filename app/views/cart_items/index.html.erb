
 <table class="table">
  <thead>
   <tr>
    <th>ユーザー名</th>
    <th>商品名</th>
    <th>値段</th>
    <th>商品数</th>
    <th></th>
    <th></th>
    <th>小計</th>
   <tr>
  </thead>
  <tbody>
   <% @carts.each do |cart| %>

    <tr>
     <td><%= cart.end_user.name %></td>
     <td><%= cart.item.name %></td>
     <td><%= cart.item.price %></td>
         <%= form_for(cart, url: cart_item_path(cart)) do |f| %>
     <td><%= f.number_field :amount, class: "col-xs-12" %></td>
     <td><%= f.submit 'edit amount'%></td>
 <% end %>   
     <td><%= link_to "destroy", cart_item_path(@cart=cart), method: :delete %></td>
     <td><%= cart.item.price*cart.amount %></td>

     <tr>
  </tbody>
         <% end %>

 </table>
        

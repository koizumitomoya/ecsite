<!DOCTYPE html>
<html>
  <head>
    <title>WebcampEcsite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
    <% if end_user_signed_in? %>
     <li>
        <%= link_to " mypage", end_users_mypage_path(current_end_user.id) %>
      </li>
      <li> 
        <%= link_to " all carts"  %>  
      </li>
      <li>
        <%= link_to " log out", sign_out_path %>
      </li>
    <% elsif admin_signed_in? %>  
       <li>
        <%= link_to " 受注一覧" %>
      </li>
      <li> 
        <%= link_to "商品登録"  %>  
      </li>
      <li>
        <%= link_to " log out", admin_sign_out_path %>
      </li>
   
    <% else %>
      <li class="">
        <%= link_to "  Sign up", new_end_user_registration_path, class: "glyphicon glyphicon-edit" %>
      </li>
      <li class="">
        <%= link_to "  Log in", new_end_user_session_path, class: "glyphicon glyphicon-check" %>
      </li>
    <% end %>

   </header>
    <%= yield %>
  </body>
</html>

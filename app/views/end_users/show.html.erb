<div class="container">
 <div class="row">
  <h1>my page</h1>
   <div class="col-xs-4">
   <h1>user infmation</h1>
  <table class="table table-hover tablr-inverse">
	 		
	 			<tr>
	 				<th>e-mail</th>
          <td><%= current_end_user.email %> 
        </tr>  
        <tr>
	 				<th>名前</th>
          <td><%= current_end_user.surname %> <%= current_end_user.name %></td>
        </tr>  
        <tr>
	 				<th>郵便番号</th>
          <td><%= current_end_user.postcode %> 
        </tr>  
        <tr>
	 				<th>住所</th>
          <td><%= current_end_user.address %> 
        </tr>  
        <tr>
	 				<th>電話番号</th>
          <td><%= current_end_user.phone_number%> 
        </tr>   
        <tr>
	 				<th><%= link_to "編集",  edit_end_user_path(@end_user.id) %></th>
          <td></td> 
        </tr>   
        <tr>
	 				<th colspan="3"><%= link_to "アカウント削除", end_user_path, data: { confirm: "退会させますか?" }, method: :delete %></th>
	 			</tr>
	 		</table>
　
 </div>
 <div class ="col-xs-4">
 <h1>address</h1>
 <table class="table table-hover tablr-inverse">
 <% current_end_user.addresses.all.each do |address| %>
	 		
	 			<tr>
	 				<th>郵便番号</th>
          <td><%=address.postcode %></td>
        </tr>  
        <tr>
	 				<th>住所</th>
          <td><%=address.address %></td>
        </tr>   
        <tr>
	 				<th>名前</th>
          <td><%=address.name %></td> 
        </tr>   
        <tr>
	 				<th colspan="3"></th>
	 			</tr>
         <% end %>
         </table>
 </div>
	 		
    
   
    
 <div class ="col-xs-4">
 <h1>購入履歴</h1>
 <table class="table table-hover tablr-inverse">
	 	    <% current_end_user.orders.each do |order| %>
	
	 			<tr>
	 				<th>注文日</th>
          <td><%=order.created_at %></td>
        </tr>  
        <tr>
	 				<th>配送先</th>
          <td><%=order.address.address %></td>
        </tr>   
        <tr>
	 				<th>支払金額</th>
          <td><%=order.total %></td> 
        </tr>   
        <tr>
	 				<th colspan="3">注文ステータス</th>
           <td><%=order.status %></td>
	 			</tr>
         <tr>
          <th><%=link_to "注文履歴詳細", order_path(order) %></th>
         </tr>
         <% end %>
         </table>
    
 
 </div>
 
</div>
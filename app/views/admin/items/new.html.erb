<h1>商品登録</h1>

<%= form_for(@item, url: admin_items_path) do |f| %>
	 	<div class="field row">
	 	 <label>Title</label>
	 	 <%= f.text_field :name, class: "col-xs-12" %>
	 	</div>
	 	<div class="field row">
	 	 <label></label>
	 	<%= f.text_field :description, class: "col-xs-12" %>
	 	</div>
         <label></label>
	 	<%= f.number_field :price, class: "col-xs-12" %>
	 	</div>
        <label>ジャンル</label>
	 	<%= f.collection_select :genre_id, Genre.where(effectiveness: 'true' ), :id, :name %>
	 	</div>
        <label>ステータス</label>
	 	
　　　　<label><%= f.radio_button :status, "販売中" %> 販売中 </label>
　　　　<label><%= f.radio_button :status, "販売停止中" %> 販売停止中</label>

         
         

	 	<div class="actions row">
	 		<%= f.submit 'create book', class: "col-xs-12 btn btn-primary"  %>
	 	</div>
<% end %>         
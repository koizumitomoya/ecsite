<div>
<table class="table">

 <thead>
  <tr>
   <th>item name</th>
   <th>price</th>
   <th>description</th>
   <th>status</th>
  </tr>
 </thead>
 <tbody>
<% @items.each do |item| %>
  <tr>
   <td><%=link_to item.name, item_path(item.id) %></td>
   <td><%= item.price %></td>
   <td><%= item.description %></td>
   <td><%= item.status %></td>
  </tr> 
 </tbody>
 <% end %>
 
</table>
 </div>